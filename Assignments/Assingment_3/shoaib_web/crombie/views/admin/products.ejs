<div class="products-container">
    <h2>All Products</h2>
    <% if (messages.error && messages.error.length > 0) { %>
        <div class="alert alert-error"><%= messages.error %></div>
    <% } %>
    <% if (messages.success && messages.success.length > 0) { %>
        <div class="alert alert-success"><%= messages.success %></div>
    <% } %>
    <table class="products-table">
        <thead>
            <tr>
                <th>Image</th>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Category</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% products.forEach(product => { %>
                <tr>
                    <td><img src="<%= product.imageUrl %>" alt="<%= product.name %>" style="width:60px;height:60px;object-fit:cover;border-radius:4px;"></td>
                    <td><%= product.name %></td>
                    <td style="max-width:200px;white-space:nowrap;overflow:hidden;text-overflow:ellipsis;"><%= product.description %></td>
                    <td>Â£<%= product.price.toFixed(2) %></td>
                    <td><%= product.category %></td>
                    <td>
                        <a href="/admin/products/<%= product._id %>/edit" class="btn-primary" style="padding:0.4rem 1rem;font-size:0.95rem;">Edit</a>
                        <form action="/admin/products/<%= product._id %>/delete" method="POST" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this product?');">
                            <button type="submit" class="btn-secondary" style="padding:0.4rem 1rem;font-size:0.95rem;">Delete</button>
                        </form>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div> 